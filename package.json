{
  "name": "chatrix",
  "version": "0.1.0",
  "description": "Embedded Matrix client for WordPress",
  "repository": "git@github.com:Automattic/chatrix.git",
  "author": "Automattic",
  "license": "GPL-2.0-or-later",
  "scripts": {
    "start:block": "vite --config frontend/targets/block/vite.config.ts",
    "build:block": "tsc && vite build --config frontend/targets/block/vite.config.ts --emptyOutDir",
    "start:popup": "vite --config frontend/targets/popup/vite.config.ts",
    "build:popup": "tsc && vite build --config frontend/targets/popup/vite.config.ts --emptyOutDir",
    "build:block-internal": "wp-scripts build --webpack-src-dir=block --output-path=build-block && cp ./block/block.json ./build-block/"
  },
  "devDependencies": {
    "@types/node": "^18.7.21",
    "@types/tapable": "^2.2.2",
    "@types/wordpress__block-editor": "^7.0.0",
    "@types/wordpress__blocks": "^11.0.7",
    "@types/wordpress__i18n": "^3.11.0",
    "@wordpress/scripts": "^24.2.0",
    "fake-indexeddb": "^4.0.0",
    "typescript": "4.7.*",
    "vite": "^3.1.3"
  },
  "dependencies": {
    "hydrogen-view-sdk": "^0.1.0",
    "hydrogen-web": "vector-im/hydrogen-web#v0.3.2"
  },
  "resolutions": {
    "@types/react": "^17.0.2"
  }
}
