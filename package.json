{
  "name": "chatrix",
  "version": "0.2.1",
  "description": "Embedded Matrix client for WordPress",
  "repository": "git@github.com:Automattic/chatrix.git",
  "author": "Automattic",
  "license": "GPL-2.0-or-later",
  "scripts": {
    "start:block": "vite --config frontend/targets/block/vite.config.ts",
    "start:popup": "vite --config frontend/targets/popup/vite.config.ts",
    "build:block": "tsc && mkdir -p build/.tmp && vite build --config frontend/targets/block/vite.config.ts --emptyOutDir && yarn run build:block:parent && yarn run build:block-internal",
    "build:popup": "tsc && mkdir -p build/.tmp && vite build --config frontend/targets/popup/vite.config.ts --emptyOutDir && yarn run build:popup:parent",
    "build:block:parent": "vite build --config frontend/targets/block/vite-parent.config.ts",
    "build:popup:parent": "vite build --config frontend/targets/popup/vite-parent.config.ts",
    "build:block-internal": "wp-scripts build --webpack-src-dir=block --output-path=build/block && cp ./block/block.json ./build/block/",
    "lint": "eslint frontend/ block/"
  },
  "devDependencies": {
    "@types/node": "^18.7.21",
    "@types/tapable": "^2.2.2",
    "@types/wordpress__block-editor": "^7.0.0",
    "@types/wordpress__blocks": "^11.0.7",
    "@types/wordpress__i18n": "^3.11.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "@wordpress/scripts": "^24.2.0",
    "eslint": "^8.25.0",
    "fake-indexeddb": "^4.0.0",
    "postcss-css-variables": "^0.18.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "typescript": "4.7.*",
    "vite": "^2.9.15",
    "xxhashjs": "^0.2.2"
  },
  "dependencies": {
    "@wordpress/compose": "^5.17.0",
    "bs58": "^5.0.0",
    "hydrogen-web": "vector-im/hydrogen-web#v0.3.2",
    "node-html-parser": "^4.0.0"
  },
  "resolutions": {
    "@types/react": "^17.0.2"
  }
}
