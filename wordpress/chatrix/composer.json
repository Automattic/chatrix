{
    "name": "automattic/chatrix-wordpress",
    "description": "WordPress plugin to embed the Chatrix Matrix client into WordPress pages.",
    "type": "wordpress-plugin",
    "license": "GPL",
    "autoload": {
        "psr-4": {
            "Automattic\\Chatrix\\": "src/"
        },
        "files": [
            "src/plugin.php",
            "src/Admin/admin.php",
            "src/Admin/settings.php",
            "src/Admin/settingsInJson.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=phpcs.xml"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
        "wp-coding-standards/wpcs": "^2.3"
    }
}
